<%- include('./partials/head') %>
<%- include('./partials/header') %>

<body>
<h2>Carga de película:</h2>
<div>
    <% if (typeof errors != 'undefined') { %>
        <div class="error" >
            <p>¡Error al crear una pelicula!</p>
            <ul>
                <% for( let i = 0; i < errors.length; i++ ) { %>
                    <li>
                        <%= errors[i].msg %>
                    </li>
                <% } %>
            </ul>
        </div>
    <% } %>
    
</div>
        <div > 

            <form action="/movies/create" method="POST">  
                <label for = "title"><h6>Titulo :</h6></label>
                <input type="text" id="title" name ="title"  >
                <label for = "awards"><h6>Premios:</h6></label>
                <input type="number" id="awards" name ="awards"  >
                <label for = "revenue"><h6>Recaudación :</h6></label>
                <input type="number" id="revenue" name ="revenue" > 
                <label for = "release_date"><h6>Fecha de estreno :</h6></label>
                <input type="date" id="release_date" name="release_date" >
                <label for = "length"><h6>Duración:</h6></label>
                <input type="number" id="length" name="length" >
                <label for = "genre_id"><h6>Genero :</h6></label>
                    <select name="genre_id">
                        <% for(let i=0; i< generos.length; i++){ %> 
                                    <option value="<%= generos[i].id%>">
                                        <%= generos[i].name%>
                                    </option>
                        <%  } %> 
                    </select>
                <div>
                    <button id="create" type="submit">Crear</button>
                    <button  id="borrar" type="reset">Borrar</button>
                </div>
            </form>
        </div>
</body>
<%- include('./partials/footer') %>