<%- include('./partials/head') %>
<body>
<h2>Edicion de pelicula <%= pelicula.first_name %>:</h2>
        <div > 
            <form action="/movies/<%= pelicula.id  %>/update?_method=PUT" method="POST">  
                <label for = "title"><h6>Titulo :</h6></label>
                <input type="text" id="title" name ="title" value= "<%= pelicula.title %>" >
                <label for = "awards"><h6>Premios:</h6></label>
                <input type="text" id="awards" name ="awards" value= "<%= pelicula.awards %>" >
                <label for = "revenue"><h6>Recaudación :</h6></label>
                <input type="number" id="revenue" name ="revenue" value= "<%= pelicula.revenue %>"> 
                <label for = "release_date"><h6>Fecha de estreno :</h6></label>
                <input type="date" id="release_date" name="release_date" value= "<%= pelicula.release_date %>" readonly>
                <label for = "length"><h6>Duración:</h6></label>
                <input type="number" id="length" name="length" value= "<%= pelicula.length %>">
                <label for = "genre_id"><h6>Genero :</h6></label>
                    <select name="genre_id">
                        <% for(let i=0; i< generos.length; i++){ %> 
                                <% if(generos[i].id == pelicula.genere_id){ %>
                                    <option value="<%= generos[i].id%>" selected> 
                                        <%= generos[i].name%>
                                    </option>
                                <% } else {%> 
                                    <option value="<%= generos[i].id%>" > 
                                        <%= generos[i].name%>
                                    </option>
                                <% } %> 
                        <%  } %> 
                    </select>
                <div>
                    <button id="update" type="submit">Actualizar</button>
                    <button  id="borrar" type="reset">Borrar</button>
                </div>
            </form>
        </div>
</body>
<%- include('./partials/footer') %>